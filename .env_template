# =============================================================================
# Document Intelligence AI v3.0 - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Required API Keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
LLAMA_CLOUD_API_KEY=llx-your-llama-cloud-api-key-here

# -----------------------------------------------------------------------------
# Database (Cloud SQL) - Required
# -----------------------------------------------------------------------------
CLOUD_SQL_INSTANCE=your-project:your-region:your-instance
DATABASE_NAME=doc_intelligence
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password-here

# -----------------------------------------------------------------------------
# GCS Storage - Required
# -----------------------------------------------------------------------------
GCS_BUCKET=your-gcs-bucket-name
GCS_PREFIX=demo_docs
PARSED_DIRECTORY=parsed
GENERATED_DIRECTORY=generated

# -----------------------------------------------------------------------------
# Optional - Database Configuration
# -----------------------------------------------------------------------------
# DATABASE_ENABLED=true
# USE_CLOUD_SQL_CONNECTOR=true
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# -----------------------------------------------------------------------------
# Optional - Agent Models
# -----------------------------------------------------------------------------
# OPENAI_SHEET_MODEL=gpt-5.1-codex-mini
# DOCUMENT_AGENT_MODEL=gemini-3-flash-preview
# GEMINI_MODEL=gemini-2.5-flash
# AGENT_MULTIMODAL_MODEL=gemini-2.5-pro
# OPENAI_TEMPERATURE=0.1
# DOCUMENT_AGENT_TEMPERATURE=0.3

# -----------------------------------------------------------------------------
# Optional - Rate Limiting & Sessions
# -----------------------------------------------------------------------------
# RATE_LIMIT_REQUESTS=10
# RATE_LIMIT_WINDOW=60
# SESSION_TIMEOUT_MINUTES=30

# -----------------------------------------------------------------------------
# Optional - Middleware
# -----------------------------------------------------------------------------
# ENABLE_MIDDLEWARE=true
# MODEL_RETRY_MAX_ATTEMPTS=3
# TOOL_RETRY_MAX_ATTEMPTS=2
# ENABLE_PII_DETECTION=true
# PII_STRATEGY=redact

# -----------------------------------------------------------------------------
# Optional - Memory
# -----------------------------------------------------------------------------
# ENABLE_SHORT_TERM_MEMORY=true
# ENABLE_LONG_TERM_MEMORY=true
# SHORT_TERM_MEMORY_MAX_MESSAGES=20

# -----------------------------------------------------------------------------
# Optional - RAG/Parsing
# -----------------------------------------------------------------------------
# FILE_STORE_NAME=doc-intelligence-store
# SOURCE_DIRECTORY=docs/structured
# PARSED_OUTPUT_DIR=parsed
# MAX_TOKENS_PER_CHUNK=512
# MAX_OVERLAP_TOKENS=100

# -----------------------------------------------------------------------------
# Optional - General
# -----------------------------------------------------------------------------
# LOG_LEVEL=INFO
# DEBUG=false
# CLEANUP_INTERVAL_SECONDS=300
